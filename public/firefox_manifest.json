{
  "name": "Shame Bell",
  "version": "1.0.0",
  "description": "Launch the shame bell.",
  "permissions": [],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo/shamebell-16.png",
      "32": "images/logo/shamebell-32.png",
      "48": "images/logo/shamebell-48.png",
      "128": "images/logo/shamebell-128.png"
    },
    "default_title": "Shame"
  },
  "icons": {
    "16": "images/logo/shamebell-16.png",
    "32": "images/logo/shamebell-32.png",
    "48": "images/logo/shamebell-48.png",
    "128": "images/logo/shamebell-128.png"
  },
  "web_accessible_resources": [
    "sounds/shame.mp3"
  ]
}